---
import type { DetailRowBooleanProps } from "@interfaces/IComponentProps";
import { twMerge } from "tailwind-merge";

export type Props = Pick<DetailRowBooleanProps, "showTitle"> & {
  className?: string;
};

const { className = "", showTitle = true } = Astro.props;
---

{
  showTitle ? (
    <p class={twMerge("text-sm uppercase w-full", className)}>
      <slot />
    </p>
  ) : null
}
