---
import DetailRowValue from "./DetailRowValue.astro";
import DetailRowTitle from "./DetailRowTitle.astro";

export interface Props {
  title: string;
  value: string;
  titleClassName?: string;
  rowClassName?: string;
}

const { title, value, titleClassName, rowClassName } = Astro.props;
---

<div class="flex flex-col">
  <DetailRowTitle className={titleClassName}>{title}</DetailRowTitle>
  <DetailRowValue className={rowClassName}>{value}</DetailRowValue>
</div>
