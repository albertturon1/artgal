---
export interface Props {
  horizontal?: boolean;
  vertical?: boolean;
  className?: string;
}

const { horizontal, vertical, className = "" } = Astro.props;
---

<div
  class={`flex flex-col ${horizontal ?? true ? "px-3 lg:px-5" : ""} ${
    vertical ?? true ? "py-3 lg:py-5" : ""
  } ${className}`}
>
  <slot />
</div>
