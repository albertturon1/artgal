---
import Gallery from "@components/Gallery.astro";
import PageMaxWidth from "@components/PageMaxWidth.astro";
import PagePadding from "@components/PagePadding.astro";
import Layout from "@layouts/Layout.astro";
import { getArtworks } from "src/api/ClevelandArtAPI";

const { data: artworksResponse } = await getArtworks({
  limit: 12,
});
const data = artworksResponse?.data ?? [];
---

<Layout title="Artgal">
  <PageMaxWidth>
    <PagePadding>
      <Gallery data={data} />
    </PagePadding>
  </PageMaxWidth>
</Layout>
